<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pinkbground"
    tools:context="com.example.happymommy.happymommy.Registrasi">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:src="@drawable/happymom"
        android:paddingTop="30sp"
        android:id="@+id/imageView4" />


    <EditText
        android:id="@+id/Remail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnRegis"
        android:layout_alignStart="@+id/btnRegis"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/Rpassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Remail"
        android:layout_alignStart="@+id/Remail"
        android:layout_below="@+id/Remail"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/Ralamat"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Alamat"
        android:layout_alignLeft="@+id/Rpassword"
        android:layout_alignStart="@+id/Rpassword"
        android:layout_below="@+id/Rpassword"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/Rnohp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="No hp"
        android:layout_alignLeft="@+id/Ralamat"
        android:layout_alignStart="@+id/Ralamat"
        android:layout_below="@+id/Ralamat"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnRegis"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:background="#FFFF99CC"
        android:text="Registrasi"
        android:textColor="#FFFFFFFF" />

</RelativeLayout>
