<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pinkbground"
    tools:context="com.example.happymommy.happymommy.RegisInfoUser">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:src="@drawable/happymom"
        android:paddingTop="30sp"
        android:id="@+id/imageView4" />


    <EditText
        android:id="@+id/Rnama"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSave"
        android:layout_alignStart="@+id/btnSave"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Nama"
        android:inputType="textPersonName"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/Ralamat"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Rnama"
        android:layout_alignStart="@+id/Rnama"
        android:layout_below="@+id/Rnama"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Alamat"
        android:inputType="textPersonName"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/Rnohp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Ralamat"
        android:layout_alignStart="@+id/Ralamat"
        android:layout_below="@+id/Ralamat"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="No HP"
        android:inputType="textPersonName"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:background="#FFFF99CC"
        android:text="Save"
        android:textColor="#FFFFFFFF" />

</RelativeLayout>
