<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bground"
    tools:context="com.rpl.happymommy.happymommy.JenisKesehatan">


    <Button
        android:id="@+id/btnTips"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="T I P S"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_radius2" />

    <Button
        android:id="@+id/btnMakanan"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="F O O D"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_radius2"/>

    <Button
        android:id="@+id/btnKondisi"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="K O N D I S I  J A N I N"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_radius2"/>

    <Button
        android:id="@+id/btnGejala"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="G E J A L A"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_radius2"/>
</LinearLayout>
